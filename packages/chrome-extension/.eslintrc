{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "impliedStrict": true,
      "modules": true,
      "blockBindings": true,
      "arrowFunctions": true,
      "objectLiteralShorthandMethods": true,
      "objectLiteralShorthandProperties": true,
      "templateStrings": true,
      "classes": true
    }
  },
  "env": {
    "node": true,
    "browser": true
  },
  "globals": {
    "chrome": true,
    "document": false,
    "navigator": false,
    "web3": true,
    "window": false
  },
  "rules": {
    "eol-last": 0,
    "quotes": [
      2,
      "single"
    ]
  }
}